{
  "name": "the-ultimate-api",
  "version": "1.0.0",
  "private": true,
  "description": "A full stack JavaScript solo project.",
  "main": "server/build/index.js",
  "scripts": {
    "start": "node server/build/index.js",
    "node": "ts-node server/index.ts",
    "build": "tsc",
    "dev:server": "nodemon --config server/nodemon.json --exec ts-node server/index.ts",
    "db:import": "bash scripts/db-import.sh",
    "prepare": "if [ \"$NODE_ENV\" != \"production\" ]; then husky install; fi",
    "test": "mocha -r ts-node/register test/**/*.test.ts",
    "test:watch": "nodemon --config test/nodemon.json --exec 'mocha'",
    "tsc": "./node_modules/typescript/bin/tsc"
  },
  "dependencies": {
    "@aws-sdk/client-ssm": "^3.759.0",
    "@types/express": "^4.17.13",
    "@types/node": "^17.0.41",
    "@types/pg": "^8.6.5",
    "argon2": "^0.30.3",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^9.0.0",
    "nodemailer": "^6.9.5",
    "pg": "^8.7.3",
    "rate-limiter-flexible": "^2.4.2",
    "sequelize": "^6.28.0",
    "swagger-ui-express": "^4.3.0",
    "typescript": "^5.1.3",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@types/chai": "^4.3.4",
    "@types/mocha": "^10.0.1",
    "@types/sinon": "^10.0.13",
    "chai": "^4.3.7",
    "chai-http": "^4.3.0",
    "eslint": "^7.29.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-html": "^6.1.2",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.7",
    "markuplint": "^2.5.0",
    "mocha": "^10.2.0",
    "nock": "^13.3.3",
    "nodemon": "^2.0.15",
    "pm2": "^6.0.5",
    "sinon": "^15.0.1",
    "stylelint": "^14.9.0",
    "stylelint-config-recommended": "^7.0.0",
    "stylelint-config-standard": "^25.0.0",
    "supertest": "^6.3.3",
    "ts-mocha": "^10.0.0",
    "ts-node": "^10.9.1"
  }
}
